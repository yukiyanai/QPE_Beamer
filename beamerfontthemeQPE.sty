\mode<presentation>

\beamer@suppressreplacementstrue

\usepackage{luatexja}
\usepackage[ipaex,deluxe]{luatexja-preset}

% 英文はサンセリフ体
\renewcommand{\familydefault}{\sfdefault}
% 数式はセリフ体
\usefonttheme{professionalfonts}
% 日本語はすべてゴシック
\renewcommand{\kanjifamilydefault}{\gtdefault}
% フレームタイトルは太字
\setbeamerfont{frametitle}{size=\Large, family=\gtfamily, series=\bfseries}

% itemize，enumerate のサイズ
\setbeamerfont{itemize/enumerate subbody}{size=\normalsize}
% 行間を広げる
\renewcommand{\baselinestretch}{1.2}
% 別行立て数式環境の行間も広げる
\def\defaultabovedisplayskip{8pt}
\def\defaultbelowdisplayskip{8pt}
\setlength{\abovedisplayskip}{\defaultabovedisplayskip}
\setlength{\belowdisplayskip}{\defaultbelowdisplayskip}


\setbeamerfont{tiny structure}{series=\mdseries,size=\tiny}
\setbeamerfont{frametitle}{size=\Large, family=\gtfamily, series=\bfseries}
\setbeamerfont{framesubtitle}{size=\large}
\setbeamerfont*{footline}{size=\Tiny}
\setbeamerfont*{date}{size=\scriptsize}

\mode
<all>

